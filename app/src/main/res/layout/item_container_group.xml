<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageGroup"
            android:layout_width="115dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:scaleType="fitXY"
            app:riv_corner_radius="@dimen/_8sdp"
            android:background="@drawable/bg_photo_item" />

        <TextView
            android:id="@+id/textGrName"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/imageGroup"
            android:textStyle="bold"
            android:textSize="@dimen/_11ssp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/primary_text"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp" />
        <TextView
            android:id="@+id/textGrDescription"
            android:layout_below="@id/textGrName"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="70dp"
            android:layout_width="@dimen/_330sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/secondary_text"
            android:layout_toEndOf="@id/imageGroup"
            android:layout_height="17dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/textDateCreated"
            android:layout_below="@id/textGrDescription"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:textSize="@dimen/_9ssp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/secondary_text"
            android:layout_toEndOf="@id/imageGroup"
            android:layout_height="17dp"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>