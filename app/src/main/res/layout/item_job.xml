<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingStart="@dimen/_5sdp"
        android:background="@color/white"
        android:paddingVertical="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/itJob_imvCompany"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_8sdp"
            android:src="@drawable/ic_company_default"
            android:background="@drawable/bg_photo_item" />
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="@dimen/_12sdp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/itJob_tvTitle"
                android:textStyle="bold"
                android:textSize="@dimen/_11ssp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/primary_text"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:text="Android Developer" />
            <TextView
                android:id="@+id/itJob_tvCompany"
                android:textSize="@dimen/_11ssp"
                android:ellipsize="end"
                android:textStyle="bold"
                android:maxLines="1"
                android:text="Company Name"
                android:textColor="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <TextView
                    android:id="@+id/itJob_tvLocation"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:text="Ha Noi, Viet Nam"
                    android:textSize="@dimen/_10ssp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/secondary_text"
                    android:layout_height="17dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/itJob_tvJobType"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10ssp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/secondary_text"
                    android:layout_height="wrap_content"
                    android:text="(On-site)"
                    />
                <TextView
                    android:id="@+id/itJob_tvTime"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10ssp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/secondary_text"
                    android:layout_height="wrap_content"
                    android:text="13 day ago"
                    android:layout_marginStart="@dimen/_80sdp"
                    />

                <TextView
                    android:id="@+id/itJob_tvApplication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/green"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/itNewFeed_line"
        android:layout_width="match_parent"
        android:layout_height="2dp" />





</com.google.android.material.card.MaterialCardView>