<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/primary"
    tools:context=".activities.NewPostActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageBack"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:background="@drawable/background_icon"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/actNewPost_imvPost"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/background_icon"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/ic_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_a_new_post"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imageBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageBack"/>
     <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/actNewPost_fabImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_24sdp"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginBottom="@dimen/_24sdp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_add_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tint="@color/white"
        app:borderWidth="0dp"
        android:backgroundTint="@color/primary" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_6sdp"
        android:background="@drawable/background_content_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/imageBack">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:paddingHorizontal="@dimen/_16sdp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/actNewPost_imvAvatar"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_default"
                app:layout_constraintTop_toTopOf="@id/constraint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:riv_oval="true" />
            <TextView
                android:id="@+id/actNewPost_tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:text="@string/app_name"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_14sdp"/>
        </LinearLayout>
        <EditText
            android:id="@+id/actNewPost_edtTag"
            android:layout_width="match_parent"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_12sdp"
            android:hint="Tag"
            android:paddingVertical="@dimen/_4sdp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/actNewPost_edtStatus"
            android:layout_width="match_parent"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_14sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_8sdp"
            android:hint="Write something"
            android:paddingVertical="@dimen/_8sdp"
            android:layout_height="wrap_content"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_10sdp"
            android:id="@+id/actNewPOst_imvImage"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>