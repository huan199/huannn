<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="@dimen/_16sdp"
        android:paddingRight="5dp"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/itComment_imvAvatar"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user_default"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingHorizontal="@dimen/_8sdp"
                android:background="@drawable/bg_round_gray_8"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/itComment_tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:gravity="center"
                        android:text="."
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/itComment_tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="today"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/itComment_tvComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comment"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/itComment_tvLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Like"
                    android:textColor="@color/primary_text" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:textColor="@color/primary_text" />

                <TextView
                    android:id="@+id/itComment_tvReply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Reply"
                    android:textColor="@color/primary_text" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>